<% if current_user && (current_user.role == "premium" || current_user.role == "admin") %>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Private Wiki</th>
        <th>Edit Wiki</th>
        <th>Delete Wiki</th>
        <th>Wiki User</th>
      </tr>
    </thead>

    <br>
    <% @wikis.each do |wiki| %>
      <tbody>
        <tr>
          <% if current_user && wiki.private == true && (wiki.user == current_user || current_user.role == "admin") %>
            <td><%= link_to wiki.title, wiki %></td>
            <td><%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success btn-sm' %></td>
            <td><%= link_to "Delete", [wiki], method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
            <td><%= wiki.user.email %></td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
<% end %>


<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Wiki</th>
      <th>Edit Wiki</th>
      <th>Delete Wiki</th>
      <th>Wiki User</th>
    </tr>
  </thead>

  <br>
  <% @wikis.each do |wiki| %>
    <tbody>
      <tr>
        <% if wiki.private == false %>
          <td><%= link_to wiki.title, wiki %></td>
          <td><%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success btn-sm' %></td>
          <td><%= link_to "Delete", [wiki], method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
          <td><%= wiki.user.email %></td>
        <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
